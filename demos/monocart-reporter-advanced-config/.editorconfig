# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# TypeScript Files
[*.ts]
quote_type = double
indent_size = 2

# Web Files
[*.{htm,html,js,jsm,tsx,pcss,svg,vue}]
indent_size = 2

# Style Sheets
[*.{css,sass,scss,less}]
max_line_length = 120
indent_size = 2

# JSON Files
[*.{json,json5,webmanifest}]
indent_size = 2

# YAML Files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false
